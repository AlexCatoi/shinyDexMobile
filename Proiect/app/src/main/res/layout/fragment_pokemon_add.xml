<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPokemonFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Text field for Pokémon name -->
            <EditText
                android:id="@+id/input_pokemon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Pokémon Name"
                android:inputType="text" />

            <!-- Spinner for game selection -->
            <Spinner
                android:id="@+id/spinner_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:entries="@array/game_options"/>

            <!-- Text field for method used -->
            <EditText
                android:id="@+id/input_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Method Used"
                android:inputType="text" />

            <!-- CheckBox for Shiny Charm -->
            <CheckBox
                android:id="@+id/checkbox_shiny_charm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Had Shiny Charm" />

            <!-- CheckBox for Shiny Luck -->
            <CheckBox
                android:id="@+id/checkbox_shiny_luck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Had Shiny Luck" />

            <!-- Add Pokémon Button -->
            <Button
                android:id="@+id/btn_add_pokemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Add Pokémon" />
            <!-- Start Hunt button -->
            <Button
                android:id="@+id/btn_start_hunt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Start Hunt!"
                android:layout_marginVertical="100dp"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>